<link rel="stylesheet" type="text/css" href="/Styles/global.css" />
<script src="/Scripts/logout.js"></script>
<body>
  <style>
    main {
      margin-top: 5vh !important;
    }
  </style>
  <main class="flex" id="login-form">
    <button onclick="logout()" class="simple danger-btn logout-btn">
      Log Out
    </button>
    <h1>Set Reminder</h1>
    <form class="flex" action="/reminder/create" method="post">
      <img src="/Media/logo.jpg" alt="krepl" width="50px" />
      <label for="date"
        >Date <input type="date" name="date" id="date" required
      /></label>
      <label for="subject"
        >Subject <input type="text" name="subject" id="subject"
      /></label>
      <label for="description"
        >Description
        <textarea type="text" name="description" id="description"></textarea>
      </label>
      <label for="email"
        >Email <input type="email" name="email" id="email"
      /></label>
      <label for="contact"
        >Contact No <input type="text" name="contact" id="contact"
      /></label>
      <label for="sms">SMS <input type="text" name="sms" id="sms" /></label>
      <label for="reoccur">
        Reoccur
        <div class="button-cluster grid radio-cluster">
          <label class="radio" for="reminderFreq">
            <input type="radio" name="reminderFreq" value="1" />Daily
          </label>
          <label class="radio" for="reminderFreq">
            <input type="radio" name="reminderFreq" value="2" />In 2 days
          </label>
          <label class="radio" for="reminderFreq">
            <input type="radio" name="reminderFreq" value="3" />
            In 3 days
          </label>
          <label class="radio" for="reminderFreq">
            <input type="radio" name="reminderFreq" value="5" />
            In 5 days
          </label>
          <label class="radio" for="reminderFreq">
            <input type="radio" name="reminderFreq" value="7" />Weekly
          </label>
        </div>
      </label>
      <button type="submit">submit</button>
    </form>
  </main>
  <script>
    const form = document.querySelector("form")
    form.addEventListener("submit", (event) => {
      if (!form.email.value && !form.sms.value && !form.contact.value) {
        alert("Please fill either email, contact or sms.")
        event.preventDefault()
      }
    })
  </script>
</body>
